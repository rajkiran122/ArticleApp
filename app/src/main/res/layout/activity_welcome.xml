<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/welcome_back"
    android:layout_height="match_parent"
    tools:context=".Activities.WelcomeActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/loader_welcome"
        android:id="@+id/lottiitt"
        android:layout_centerInParent="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lottiitt"
        android:text="ATRICULO"
        android:visibility="gone"
        android:textSize="35sp"
        android:id="@+id/welcome_text"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/algerian"
        android:textColor="#E4351818" />

</RelativeLayout>